{
  "name": "micro-frontend-ecommerce",
  "version": "1.0.0",
  "description": "Micro-frontend e-commerce application using Webpack Module Federation",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "npm run start:host",
    "start:host": "npm run start --workspace=host",
    "start:auth": "npm run start --workspace=auth",
    "start:common": "npm run start --workspace=common",
    "start:landing": "npm run start --workspace=landing",
    "start:plans": "npm run start --workspace=plans",
    "start:checkout": "npm run start --workspace=checkout",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:host": "npm run test --workspace=host",
    "test:auth": "npm run test --workspace=auth",
    "test:common": "npm run test --workspace=common",
    "test:landing": "npm run test --workspace=landing",
    "test:plans": "npm run test --workspace=plans",
    "test:checkout": "npm run test --workspace=checkout",
    "install:all": "npm install",
    "clean": "rm -rf node_modules && npm run clean --workspaces",
    "dev": "concurrently \"npm run start:host\" \"npm run start:auth\" \"npm run start:landing\" \"npm run start:plans\" \"npm run start:checkout\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,css,md,json}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
